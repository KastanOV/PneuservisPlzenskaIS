                            <a href="#" data-toggle="dropdown" class="dropdown-toggle">Zaměstnanci <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Docházka", "CheckPassword", "EmployeeAttendances")</li>
                                <li>@Html.ActionLink("Seznam zaměstnanců", "Index", "Employees")</li>
