@model PneuservisISMVC.EmployeeAttendance

@{
    ViewBag.Title = "Create";
}

<h2>Docházka zaměstnanců</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @if (ViewBag.Message != null)
        {
            <h3 class="text-danger">@ViewBag.Message</h3>
        }
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Employees_id, "Login Zaměstnance", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Employees_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Employees_id, "", new { @class = "text-danger" })
                
            </div>
            
        </div>
        <div class="text-info">
            @Html.Label("Heslo", new { @class = "control-label col-md-2" }) 
            @Html.Password("password", null, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Docházka" class="btn btn-default" />
            </div>
        </div>
        
    </div>
}


<div>
    @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
